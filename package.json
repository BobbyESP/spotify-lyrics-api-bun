{
  "name": "spotify-lyrics-api-bun",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build:js": "bun build src/index.ts --target node --outdir ./dist --minify-whitespace --minify-syntax",
    "build:executable": "bun build src/index.ts --compile --target bun --outfile ./dist/server --minify-whitespace --minify-syntax",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "bun test"
  },
  "dependencies": {
    "@elysiajs/node": "^1.2.4",
    "@elysiajs/swagger": "^1.1.6",
    "elysia": "latest"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
  "module": "src/index.ts"
}